<main class="container mb-5">
  <h1 class="m-4 h3 ">Password Generator</h1>

  <section class="form m-4">
    <form action="/generate" method="POST" autocomplete="off">
      <div class="row mb-3">
        <label class="col-sm-4 col-form-label" for="length">Password length:</label>
        <div class="col-sm-8 d-flex flex-column align-items-start">
          <input type="number" id="length" name="length" class="form-control" min="4" max="32"
            aria-describedby="passwordHelpBlock" value="{{options.length}}" required>
          <span class="text-secondary">Length range from 4 to 32 characters.</span>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-sm-4 col-form-label" for="lowercase">Include lowercase character:</label>
        <div class="col-sm-8">
          <input class="form-check-input" type="checkbox" id="lowercase" name="lowercase" 
            {{#if options.lowercase}} checked {{/if}}>
          <span>Example: abcd...</span>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-sm-4 col-form-label" for="uppercase">Include uppercase character:</label>
        <div class="col-sm-8">
          <input class="form-check-input" type="checkbox" id="uppercase" name="uppercase"
          {{#if options.uppercase}} checked {{/if}}>
          <span>Example: ABCD...</span>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-sm-4 col-form-label" for="numbers">Include numbers:</label>
        <div class="col-sm-8">
          <input class="form-check-input" type="checkbox" id="numbers" name="numbers"
          {{#if options.numbers}} checked {{/if}}>
          <span>Example: 0123...</span>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-sm-4 col-form-label" for="symbols">Include symbols:</label>
        <div class="col-sm-8">
          <input class="form-check-input" type="checkbox" id="symbols" name="symbols"
          {{#if options.symbols}} checked {{/if}}>
          <span>Example: !@#$...</span>
        </div>
      </div>

      <div class="row mb-3">
        <label class="col-sm-4 col-form-label" for="exclude">Exclude characters:</label>
        <div class="col-sm-8 d-flex flex-column align-items-start">
          <input type="text" class="form-control" id="exclude" name="exclude" maxlength="16" value="{{options.exclude}}">
          <span class="text-secondary">Kindly enter the characters that should not be included in the password. Max 16 characters.</span>
        </div>
      </div>
      <div class="d-grid gap-2">
        <button id="submitButton" type="submit" class="btn btn-success">Generate Password</button>
        <button id="resetButton" type="button" class="btn btn-outline-secondary">Reset All Input</button>
      </div>
    </form>

    <div class="alert alert-info my-3 d-flex justify-content-between align-items-center">
      <span class="result">
        Your password is: 
        <span id="passwordOutput" class="text-danger font-monospace small">
          {{#unless password }}Kindly click 'Generate Password' to get the password.{{/unless}}
          {{ password }}
        </span>
      </span>
      <i class="copy bi bi-clipboard fs-2 m-2"></i>
    </div>
  </section>
</main>

